<% if @results.key?(:authors) %>
  <div class="container search-results">
    <hgroup class="mb20">
  		<h2 class="lead text-center"><strong class="text-danger"><%= @results[:authors].count %></strong> <%= 'author'.pluralize(@results[:authors].count) %> were found for the search for <strong class="text-danger"><%= params[:q] %></strong></h2>
  	</hgroup>
    <section class="col-xs-12 col-sm-6 col-md-12">
    <% if @results[:authors].count > 0 %>
      <div class='col-xs-3'>
        <% @results[:authors].each do |author| %>
          <%= render 'authors/author', :author => author %>
        <% end %>
      </div>
    <% end %>
  	</section>
  </div>
<% end %>
