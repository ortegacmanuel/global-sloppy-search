<% if @results.key?(:games) %>
  <div class="container search-results">
    <hgroup class="mb20">
  		<h2 class="lead text-center"><strong class="text-danger"><%= @results[:games].count %></strong> <%= 'game'.pluralize(@results[:games].count) %> were found for the search for <strong class="text-danger"><%= params[:q] %></strong></h2>
  	</hgroup>
    <section class="col-xs-12 col-sm-6 col-md-12">
    <% if @results[:games].count > 0 %>
      <div class='col-xs-3'>
        <% @results[:games].each do |game| %>
          <%= render 'games/game', :game => game %>
        <% end %>
      </div>
    <% end %>
  	</section>
  </div>
<% end %>
